<div class = "container">
  <div class = "row">
    <div class = "col-lg-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <thead>
          <tr>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>name:</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction:</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class = "row">
        <% if @user.id == current_user.id %>
          <%= link_to("/users/:id/edit") do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
      </div>
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h2>error</h2>
          <ul style = "color: red">
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <h2>New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class = "field row">
          <p><strong>Title</strong></p>
          <%= f.text_field :title %>
        </div>
        <div class = "field row">
          <p><strong>Opinion</strong></p>
          <%= f.text_area :body %>
        </div>
        <div class = "field row">
        <%= f.submit 'Create Boook' %>
        </div>
      <% end %>
    </div>

    <div class = "col-lg-9">
      <h2>Books</h2>
      <table class = "table table-striped">
        <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
          <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
          <%= link_to user_path(book.user_id) do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>