<h1>Books</h1>
<table = "1">
  <thead>
    <tr align="center">
      <th><h2>Title</h2></th>
      <th><h2>Body</h2></th>
      <th></th>
    </tr>
  </thead>
    <tbody>
  <% @books.each do |book| %>
  <tr>
    <td>
    <%= link_to book_path(book.id) do %>
      <p><%= book.title %></p>
    <% end %>
    </td>
    <td><p><%= book.body %></p></td>
  </tr>
    <% end %>
  </tbody>
</table>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Boook' %>
<% end %>