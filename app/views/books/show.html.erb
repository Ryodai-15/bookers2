<p id = "notice" ><%= flash[:notice] %></p>

<div class = "container">
  <div class = "row">
    <div class = "col-lg-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <thead>
          <tr>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>name:</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction:</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class = "row">
        <% if @user.id == current_user.id %>
          <%= link_to edit_user_path(@user) do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
      </div>


      <div class = "row">
        <% if @user.id == current_user.id %>
          <P><%= link_to "", user_path(@user), class: "col-lg-12 btn btn-default glyphicon glyphicon-wrench" %></P>
        <% end %>
      </div>

  <%= render 'books/form', book: @new %>

    </div>


    <div class = "col-lg-9">
      <h2>Book detail</h2>
      <table class = "table table-striped">
        <thead>
          <tr>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
            <%= link_to user_path(@book.user.id) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
              <%= @book.user.name %>
            <% end %>
            </td>
            <td><%= link_to @book.title,book_path(@book) %></td>
            <td><%= @book.body %></td>

            <% if @user.id == current_user.id %>
              <td><%= link_to "Edit" ,edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destoroy", book_path(@book.id) ,method: :delete, data: { confirm: "Are you sure?" } ,class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>