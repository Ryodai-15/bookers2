<p id = "notice" ><%= flash[:notice] %></p>

<div class = "container">
  <div class = "row">
    <div class = "col-lg-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <thead>
          <tr>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th>name:</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction:</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class = "row">
        <% if @user.id == current_user.id %>
          <P><%= link_to "", user_path(@user), class: "col-lg-12 btn btn-default glyphicon glyphicon-wrench" %></P>
        <% end %>
      </div>


      <h2>New book</h2>
      <%= form_with model: @new, local:true do |f| %>
        <div class = "field row">
          <p><strong>Title</strong></p>
          <%= f.text_field :title, class: "col-lg-12 book_title" %>
        </div>
        <div class = "field row">
          <p><strong>Opinion</strong></p>
          <%= f.text_area :body, class: "col-lg-12 book_body" %>
        </div>
        <div class = "field row">
        <%= f.submit 'Create Boook', class: "btn btn-primary col-lg-12" %>
        </div>
      <% end %>
    </div>


    <div class = "col-lg-9">
      <h2>Book detail</h2>
      <table class = "table table-striped">
        <thead>
          <tr>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
            <%= link_to user_path(@book.user_id) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
              <%= link_to @book.user.name, user_path(@book.user_id)ã€€%>
            <% end %>
            </td>
            <td><%= link_to @book.title,book_path(@book) %></td>
            <td><%= @book.body %></td>
            <%=  @book.user == current_user %>
              <td><link_to "Edit" ,edit_book_path(@book) %></td>
              <td><link_to "Destoroy", book_path(@book) ,method: :delete, data: { confirm: "Are you sure?" } %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>